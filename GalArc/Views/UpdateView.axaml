<Window x:Class="GalArc.Views.UpdateView"
        xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:c="using:GalArc.Controls"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:i="using:GalArc.I18n"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:GalArc.ViewModels"
        Title="{x:Static i:GuiStrings.Update}"
        MinWidth="200"
        d:DesignHeight="450"
        d:DesignWidth="800"
        x:DataType="vm:UpdateViewModel"
        CanMaximize="False"
        CanMinimize="False"
        CanResize="False"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        mc:Ignorable="d">

    <Design.DataContext>
        <vm:UpdateViewModel />
    </Design.DataContext>

    <StackPanel Margin="20" Spacing="15">
        <TextBlock Text="{Binding StatusMessage}" />
        <c:GroupBox Header="{x:Static i:GuiStrings.Changelog}" IsVisible="{Binding Changelog, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
            <TextBox IsReadOnly="True"
                     Text="{Binding Changelog}"
                     TextWrapping="Wrap" />
        </c:GroupBox>
        <DockPanel LastChildFill="False">
            <Button Command="{Binding ExitCommand}"
                    CommandParameter="{Binding $parent[Window]}"
                    Content="{x:Static i:GuiStrings.OK}"
                    DockPanel.Dock="Right" />
            <Button Command="{Binding OpenUpdateUrlCommand}"
                    Content="{x:Static i:GuiStrings.OpenUrl}"
                    DockPanel.Dock="Right"
                    IsVisible="{Binding NewerVersionExist}" />
        </DockPanel>
    </StackPanel>
</Window>
