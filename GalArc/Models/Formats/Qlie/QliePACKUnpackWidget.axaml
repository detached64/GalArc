<UserControl x:Class="GalArc.Models.Formats.Qlie.QliePACKUnpackWidget"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:i="using:GalArc.I18n"
             xmlns:local="using:GalArc.Models.Formats.Qlie"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450"
             d:DesignWidth="800"
             x:DataType="local:QliePACKUnpackOptions"
             mc:Ignorable="d">

    <Design.DataContext>
        <local:QliePACKUnpackOptions />
    </Design.DataContext>

    <StackPanel Spacing="10">
        <TextBlock Text="{x:Static i:GuiStrings.SelectEncScheme}" />
        <ComboBox HorizontalAlignment="Stretch"
                  ItemsSource="{Binding Names}"
                  SelectedItem="{Binding SelectedName, Mode=TwoWay}" />
        <TextBlock Text="{Binding Source={x:Static i:GuiStrings.Path}, StringFormat={}key.fkey {0}}" />
        <TextBox HorizontalAlignment="Stretch"
                 Text="{Binding Key, Mode=TwoWay}"
                 Watermark="{x:Static i:GuiStrings.Optional}" />
        <StackPanel Orientation="Horizontal" Spacing="10">
            <CheckBox Content="{x:Static i:GuiStrings.SaveKey}" IsChecked="{Binding SaveKey}" />
            <CheckBox Content="{x:Static i:GuiStrings.SaveHash}" IsChecked="{Binding SaveHash}" />
        </StackPanel>
    </StackPanel>
</UserControl>
